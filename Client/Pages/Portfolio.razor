@page "/portfolio"

@using Data;
@inject IJSRuntime JSRuntime;

<PageTitle>Portfolio</PageTitle>


<div class="Portfolio">
    @foreach(var el in pItems)
    {
        <div class="PortfolioItem">
            <div class="PItemHeader">
                    <img style="height: 6pc;" src="@el.imgPath" />
            </div>
            <div class="PItemContent">
                <h5><a href="@el.link">@el.name</a> </h5>
                <p style="margin: 0.5pc 0 0 0;">@el.description</p>
                <p></p>
             </div>
        </div>
    }
</div>

@code {

    private PortfolioItem[] pItems =
        {
            new PortfolioItem(
                "TrainingJournal", 
                "A traning journal app to register your daily workouts. Developed with AvaloniaUI, XAML, XML(to save the data), Linq, MVVM, ReactiveUI.",
                "https://github.com/DiegoCou/TrainingJournalAV11"
                ),
            new PortfolioItem(
                "Climbing Weather",
                "A weather app for android for personal use to check the weather in different climbing locations in Pontevedra, Galicia. Developed in Flutter, using Figma and FlutterFlow to design the UI, it utilizes de Open Meteo API for the weather data.",
                "dc_icon2.svg",
                "https://imgur.com/a/beS4ThT"
            ),
            new PortfolioItem(
                "My Web", 
                "I designed this website using Figma, a website for easy prototyping of User interfaces. For the process of making the web I decided to use ASP.NET Blazor, It allowed me to practice HTML and CSS while still using C#.", 
                "dc_icon2.svg",
                "https://github.com/DiegoCou/PortfolioStaticWebBlazor"),
    };

    private string link = "/";
    private int getCount()
    {
        if (pItems.Length > 2)
            return 3;
        else
            return pItems.Length;
    }

    private void navigate(string url)
    {
        JSRuntime.InvokeAsync<object>("open", url, "blank");
    }
}



<style>
    .PortfolioItem {
        position: relative;
        height: 30pc;
        width: 25pc;
        margin: auto;
        border: 1px solid black;
        background-color: whitesmoke;
        border-radius: 2pc;
        font-family: 'raleway';
    }

    .Portfolio {
        padding: 5% 10%;
        position: relative;
        z-index: 1;
        background-color: white;
        height: fit-content;
        width: 100%;
        display: grid;
        grid-template-columns: repeat(@getCount(), 1fr);
        grid-gap: 5pc;
        background-image: url(data:image/png;base64,);
    }

    .PItemHeader{
        height: 30%;
        background-color: #F1BD81;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 2pc 2pc 0 0;
        background-image: url(data:image/png;base64,);
    }

    .PItemContent{
        padding: 5% 10%;
        text-align: justify
    }
</style>